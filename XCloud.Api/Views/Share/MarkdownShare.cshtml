@model XCloud.Sharing.Api.Dto.Shares.MarkdownShare

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Model.Title</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Html.Raw(Model.OgMeta)
    <link href="@Url.Content("~/styles.css")" rel="stylesheet" type="text/css"/>
    <link rel="icon" type="image/png" href="/favicon.ico"/>

    <script src="@Url.Content("~/jquery.min.js")"></script>
    <script src="@Url.Content("~/cactus.js")"></script>
    <script src="@Url.Content("~/main.js")"></script>
</head>

<body class="max-width mx-auto px3 ltr">
<div class="content index py4">

    @if (Model.Nav != null)
    {
        <div id="header-post">
            <a id="menu-icon" href="#" class="">
                <i class="fas fa-bars fa-lg"></i>
            </a>
            <a id="menu-icon-tablet" href="#" class="" style="display: none;">
                <i class="fas fa-bars fa-lg"></i>
            </a>
            <a id="top-icon-tablet" href="#" onclick="$('html, body').animate({ scrollTop: 0 }, 'fast');" style="" aria-label="Top of Page">
                <i class="fas fa-chevron-up fa-lg"></i>
            </a>
            <span id="menu" style="visibility: hidden;">


                <div id="toc">
                    <nav id="TableOfContents" aria-label="Table of contents">
                        <ul>
                            <li>
                                <a href="@Model.Nav.Parent.Url">@Model.Nav.Parent.Title</a>
                            </li>
                            <li class="li-nested">
                                <ul>
                                    @foreach (var link in Model.Nav.Children)
                                    {
                                        <li>
                                            <a href="@link.Url">@link.Title</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>

            </span>
        </div>
    }

    <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
        <header>
            <h1 class="posttitle" itemprop="name headline">
                @Model.Title
            </h1>
        </header>

        <div class="content" itemprop="articleBody">
            @Html.Raw(Model.Body)
        </div>
    </article>

    @if (Model.Nav != null)
    {
        <div id="footer-post-container">
            <div id="footer-post" style="display: none;">
                <div id="toc-footer" style="display: none">
                    <nav id="TableOfContents" aria-label="Table of contents">
                        <ul>
                            <li>
                                <a href="@Model.Nav.Parent.Url">@Model.Nav.Parent.Title</a>
                            </li>
                            <li class="li-nested">
                                <ul>
                                    @foreach (var link in Model.Nav.Children)
                                    {
                                        <li>
                                            <a href="@link.Url">@link.Title</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>


                <div id="actions-footer">

                    <a id="toc-toggle" class="icon" href="#" onclick="$('#toc-footer').toggle();return false;" aria-label="TOC">
                        <i class="fas fa-list fa-lg" aria-hidden="true"></i> NAV
                    </a>

                </div>

            </div>
        </div>
    }
    <footer id="footer">
        <div class="footer-left" style="width: 100%; display: flex; flex-direction: row; justify-content: center; gap: 8px">
            <span>&copy; Copyright 2020-@DateTime.Now.Year</span> <a href="https://logrus.dev">logrus.dev</a>
        </div>
    </footer>

</div>
</body>

</html>